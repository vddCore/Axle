<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:gli="clr-namespace:Glitonea;assembly=Glitonea"
             xmlns:gui="clr-namespace:Glitonea.UI;assembly=Glitonea.UI"
             xmlns:fa="clr-namespace:FluentAvalonia.Styling;assembly=FluentAvalonia"
             xmlns:controls="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
             x:Class="Axle.App"
             RequestedThemeVariant="Default">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <gli:Glitonea />
                <gui:GlitoneaUI />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme />

        <fa:FluentAvaloniaTheme PreferSystemTheme="True" />
        
        <Style Selector="TextElement">
            <Setter Property="FontFamily" Value="Segoe UI" />
        </Style>
        
        <Style Selector="controls|FontIcon">
            <Setter Property="FontFamily" Value="Segoe Fluent Icons" />
        </Style>
    </Application.Styles>
</Application>