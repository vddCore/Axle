<controls:FluentWindow x:Class="Axle.View.Windows.MainWindow"
                  xmlns="https://github.com/avaloniaui"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:gui="clr-namespace:Glitonea.UI;assembly=Glitonea.UI"
                  xmlns:mvvm="clr-namespace:Glitonea.Mvvm;assembly=Glitonea"
                  xmlns:vm="clr-namespace:Axle.ViewModel.Windows"
                  xmlns:coreui="clr-namespace:Axle.View.CoreUI"
                  xmlns:controls="clr-namespace:Glitonea.UI.Controls;assembly=Glitonea.UI"
                  DataContext="{mvvm:DataContextSource vm:MainWindowViewModel}"
                  Width="700"
                  Height="360"
                  WindowStartupLocation="CenterScreen"
                  Title="Framework Driver Installer"
                  CanFullScreen="True"
                  CanResize="False"
                  CanMinimize="False"
                  CanMaximize="False"
                  ShowFullScreenButton="False"
                  ShowMaximizeButton="False"
                  ShowMinimizeButton="False"
                  ShowCloseButton="True"
                  Topmost="True"
                  ExtendClientAreaChromeHints="NoChrome"
                  CaptionBarBackground="#AA000000"
                  Background="#88000000"
                  EnableCustomWindowBorder="True"
                  CloseButtonBackground="#E4792C"
                  ActiveWindowBorderBrush="#E4792C"
                  InactiveWindowBorderBrush="#55E4792C">
    <coreui:MainView />
</controls:FluentWindow>